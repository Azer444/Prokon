@model HomeSliderComponent

@{
    ViewData["Title"] = "Add Home Slider Components";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Add Slider Component</h1>
                <form asp-action="add_slider_component" asp-controller="home" asp-area="admin" method="post" enctype="multipart/form-data">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 mt-3">
                                <h3 class="main-color">Title</h3>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_AZ" class="control-label main-color"></label>
                                    <input asp-for="Title_AZ" class="form-control">
                                    <span asp-validation-for="Title_AZ" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_RU" class="control-label main-color"></label>
                                    <input asp-for="Title_RU" class="form-control">
                                    <span asp-validation-for="Title_RU" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_EN" class="control-label main-color"></label>
                                    <input asp-for="Title_EN" class="form-control">
                                    <span asp-validation-for="Title_EN" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_TR" class="control-label main-color"></label>
                                    <input asp-for="Title_TR" class="form-control">
                                    <span asp-validation-for="Title_TR" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <h3 class="main-color">Link</h3>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Link" class="control-label main-color"></label>
                                    <input asp-for="Link" class="form-control">
                                    <span asp-validation-for="Link" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <h3 class="main-color">Button Text</h3>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="ButtonText_AZ" class="control-label main-color"></label>
                                    <input asp-for="ButtonText_AZ" class="form-control">
                                    <span asp-validation-for="ButtonText_AZ" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="ButtonText_RU" class="control-label main-color"></label>
                                    <input asp-for="ButtonText_RU" class="form-control">
                                    <span asp-validation-for="ButtonText_RU" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="ButtonText_EN" class="control-label main-color"></label>
                                    <input asp-for="ButtonText_EN" class="form-control">
                                    <span asp-validation-for="ButtonText_EN" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="ButtonText_TR" class="control-label main-color"></label>
                                    <input asp-for="ButtonText_TR" class="form-control">
                                    <span asp-validation-for="ButtonText_TR" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <h3 class="main-color">Photo</h3>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="d-flex m-0 bold-text" for=""><span class="main-color">Photo</span></label>
                                    <div class="custom-file">
                                        <input asp-for="Photo" class="form-control custom-file-input" accept="image/*" />
                                        <label class="custom-file-label"></label>
                                    </div>
                                    <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <a asp-action="index" asp-controller="home" class="main-color">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/show_file_name.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
