                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.TitleText_TR)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.TitleText_TR)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Helper Text</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
