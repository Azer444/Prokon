@model EthicsFileComponentEditViewModel

@{
    ViewData["Title"] = "Edit File Component";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit File Component</h1>
                <form asp-action="edit_file_component" asp-controller="ethics" asp-area="admin" method="post" enctype="multipart/form-data">
                    <div class="container">
                        <div class="row main-color">
                            <div class="col-12 mt-3">
                                <h3 class="main-color">Title</h3>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_AZ" class="control-label"></label>
                                    <input asp-for="Title_AZ" class="form-control">
                                    <span asp-validation-for="Title_AZ" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_RU" class="control-label"></label>
                                    <input asp-for="Title_RU" class="form-control">
                                    <span asp-validation-for="Title_RU" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_EN" class="control-label"></label>
                                    <input asp-for="Title_EN" class="form-control">
                                    <span asp-validation-for="Title_EN" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title_TR" class="control-label"></label>
                                    <input asp-for="Title_TR" class="form-control">
                                    <span asp-validation-for="Title_TR" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <h3 class="main-color">File</h3>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @{
                                        var filePath = "/uploads/" + Model.FileName;
                                    }
                                    <label class="d-flex m-0 bold-text" for=""><span>File</span></label>
                                    <a class="mb-3" href="@filePath" target="_blank" style="display:inline-block;">
                                        <img src="~/img/pdf.svg" class="pdf-svg" />
                                    </a>                                    
                                    <div class="custom-file">
                                        <input asp-for="File" class="form-control custom-file-input" accept=".pdf" />
                                        <label class="custom-file-label">
                                            Change file...
                                        </label>
                                    </div>
                                    <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="File"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group text-center">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <a asp-action="index" asp-controller="ethics" class="main-color">Back to List</a>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/show_file_name.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}