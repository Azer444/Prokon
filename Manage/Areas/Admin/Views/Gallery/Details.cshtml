@model GalleryComponent
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-white">Project Details</h6>
                        <div>
                            <a asp-action="index" asp-controller="gallery" class="btn btn-primary">Back to List</a>
                            <a asp-action="edit" asp-controller="gallery" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div>
                            <div class="row main-color">
                                <div class="col-12">
                                    <h4 class="main-color">Title</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Title_AZ)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Title_AZ)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Title_RU)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Title_RU)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Title_EN)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Title_EN)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Title_TR)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Title_TR)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Title Photo</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            Title Photo
                                        </div>
                                        <div class="col-6">
                                            @{
                                                var photoPath = "/uploads/" + Model.TitlePhotoName;
                                            }
                                            <img src="@photoPath" class="table-image-item" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Optional Photos</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            Optional Photos
                                        </div>
                                        <div class="col-6">
                                            @foreach (var galleryComponentPhoto in Model.GalleryComponentPhotos)
                                            {
                                                var galleryComponentPhotoPath = "/uploads/" + galleryComponentPhoto.PhotoName;

                                                <img src="@galleryComponentPhotoPath" class="table-image-item my-2" />
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <div class="row">
                                        <div class="col-3 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.ShowOnHomePage)
                                        </div>
                                        <div class="col-9">
                                            @if (Model.ShowOnHomePage)
                                            {
                                                <p>Showing, Order:  @Model.Order</p>
                                            }
                                            else
                                            {
                                                <span>Not showing</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

