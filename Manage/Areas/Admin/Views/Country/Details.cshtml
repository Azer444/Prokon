@model Country

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-white">Country Details</h6>
                        <div>
                            <a asp-action="index" asp-controller="country" class="btn btn-primary">Back to List</a>
                            <a asp-action="edit" asp-controller="country" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div>
                            <div class="row main-color">
                                <div class="col-12">
                                    <h4 class="main-color">Name</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_AZ)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_AZ)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_RU)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_RU)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_EN)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_EN)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_TR)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_TR)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Contact</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Phone)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Location)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.Location)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

