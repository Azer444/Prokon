@model Country

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit Country</h1>
                <div class="row main-color">
                    <div class="col-12">
                        <form asp-action="edit" asp-controller="country" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Name</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_AZ" class="control-label"></label>
                                            <input asp-for="Name_AZ" class="form-control">
                                            <span asp-validation-for="Name_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_RU" class="control-label"></label>
                                            <input asp-for="Name_RU" class="form-control">
                                            <span asp-validation-for="Name_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_EN" class="control-label"></label>
                                            <input asp-for="Name_EN" class="form-control">
                                            <span asp-validation-for="Name_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_TR" class="control-label"></label>
                                            <input asp-for="Name_TR" class="form-control">
                                            <span asp-validation-for="Name_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Contact</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Phone" class="control-label"></label>
                                            <input asp-for="Phone" class="form-control">
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Location" class="control-label"></label>
                                            <textarea asp-for="Location" class="form-control"></textarea>
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="country" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts{
    <script src="~/vendor/ckeditor/ckeditor.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        ClassicEditor
            .create(document.querySelector('#Location'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })
    </script>
}