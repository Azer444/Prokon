@model SafetyIndexViewModel

@{
    ViewData["Title"] = "Safety";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3">
                        <h6 class="m-0 font-weight-bold text-white">Safety Page</h6>
                    </div>
                    <div class="card-body">
                        <h2 class="main-color">Main Photo</h2>
                        @if (Model.SafetyMainPhoto == null)
                        {
                            <a href="/admin/safety/define_main_photo" class="btn btn-primary mb-3">Define Main Photo</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Photo</th>
                                            <th class="main-color text-center">Title(AZ)</th>
                                            <th class="main-color text-center">Title(RU)</th>
                                            <th class="main-color text-center">Title(EN)</th>
                                            <th class="main-color text-center">Title(TR)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var photoPath = "/uploads/" + Model.SafetyMainPhoto.PhotoName;
                                            <tr id="@Model.SafetyMainPhoto.Id">
                                                <td class="text-center">
                                                    <img src="@photoPath" class="table-image-item" />
                                                </td>
                                                <td class="text-center">@Model.SafetyMainPhoto.Title_AZ</td>
                                                <td class="text-center">@Model.SafetyMainPhoto.Title_RU</td>
                                                <td class="text-center">@Model.SafetyMainPhoto.Title_EN</td>
                                                <td class="text-center">@Model.SafetyMainPhoto.Title_TR</td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a class="btn btn-primary" href="/admin/safety/edit_main_photo/@Model.SafetyMainPhoto.Id">Edit</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <br />

                        <h2 class="main-color">Components</h2>
                        <a href="/admin/safety/add_component" class="btn btn-primary mb-3">Add Component</a>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="main-color text-center">Photo</th>
                                        <th class="main-color text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var safetyComponent in Model.SafetyComponents)
                                    {
                                        var photoPath = "/uploads/" + safetyComponent.PhotoName;
                                        <tr id="@safetyComponent.Id">
                                            <td class="text-center">
                                                <img src="@photoPath" class="table-image-item" />
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a class="btn btn-primary" href="/admin/safety/edit_component/@safetyComponent.Id">Edit</a>
                                                    <a class="btn btn-info mx-2" href="/admin/safety/details_component/@safetyComponent.Id">Details</a>
                                                    <a class="btn btn-danger delete-component text-white">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <br />

                        <h2 class="main-color">Text Component</h2>
                        @if (Model.SafetyTextComponent == null)
                        {
                            <a href="/admin/safety/define_text_component" class="btn btn-primary mb-3">Define</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Title(AZ)</th>
                                            <th class="main-color text-center">Title(RU)</th>
                                            <th class="main-color text-center">Title(EN)</th>
                                            <th class="main-color text-center">Title(TR)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            <tr>
                                                <td class="text-center">@Model.SafetyTextComponent.Title_AZ</td>
                                                <td class="text-center">@Model.SafetyTextComponent.Title_RU</td>
                                                <td class="text-center">@Model.SafetyTextComponent.Title_EN</td>
                                                <td class="text-center">@Model.SafetyTextComponent.Title_TR</td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a class="btn btn-primary" href="/admin/safety/edit_text_component">Edit</a>
                                                        <a class="btn btn-info mx-2" href="/admin/safety/details_text_component">Details</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <br />

                        <h2 class="main-color">Page Access Component</h2>
                        @if (Model.PageAccessComponent == null)
                        {
                            <a href="/admin/safety/define_page_access_component" class="btn btn-primary mb-3">Define</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Access1 (EN)</th>
                                            <th class="main-color text-center">Access2 (EN)</th>
                                            <th class="main-color text-center">Access3 (EN)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            <tr id="@Model.PageAccessComponent.Id">
                                                <td class="text-center">@Model.PageAccessComponent.Access1_EN</td>
                                                <td class="text-center">@Model.PageAccessComponent.Access2_EN</td>
                                                <td class="text-center">@Model.PageAccessComponent.Access3_EN</td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a class="btn btn-info mx-2" href="/admin/safety/details_page_access_component/@Model.PageAccessComponent.Id">Details</a>
                                                        <a class="btn btn-primary" href="/admin/safety/edit_page_access_component/@Model.PageAccessComponent.Id">Edit</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).on("click", ".delete-component", function () {

            var deleteBtn = $(this);
            var safetyComponent = $(this).parents().eq(2);

            var data = {
                id: $(safetyComponent).attr('id')
            }

            $.ajax({
                url: "/admin/safety/delete_component",
                data: data,
                success: function () {
                    $(deleteBtn).text("Deleted");
                    $(safetyComponent).fadeOut("normal", function () {
                        $(this).remove();
                    });
                }
            })
        })
    </script>
}