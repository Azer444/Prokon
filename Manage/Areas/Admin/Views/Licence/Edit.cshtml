@model LicenceEditViewModel
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit Licence</h1>
                <div class="row">
                    <div class="col-12">
                        <form asp-action="edit" asp-controller="licence" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="container">
                                <div class="row main-color">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Name</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_AZ" class="control-label"></label>
                                            <input asp-for="Name_AZ" class="form-control">
                                            <span asp-validation-for="Name_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_RU" class="control-label"></label>
                                            <input asp-for="Name_RU" class="form-control">
                                            <span asp-validation-for="Name_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_EN" class="control-label"></label>
                                            <input asp-for="Name_EN" class="form-control">
                                            <span asp-validation-for="Name_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name_TR" class="control-label"></label>
                                            <input asp-for="Name_TR" class="form-control">
                                            <span asp-validation-for="Name_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <h3 class="main-color">Photo</h3>
                                        <div class="form-group">
                                            @{
                                                var photoPath = "/uploads/" + Model.PhotoName;
                                            }
                                            <img src="@photoPath" class="pdf-png border" />
                                            <label class="d-flex m-0 bold-text" for=""><span>Photo</span></label>
                                            <div class="custom-file">
                                                <input asp-for="Photo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label"></label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="Photo"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <h3 class="main-color">PDF</h3>
                                        <div class="form-group">
                                            @{
                                                var pdfPath = "/uploads/" + Model.PDFName;
                                            }
                                            <a href="@pdfPath" target="_blank" style="display:inline-block;margin-bottom:79px;">
                                                <img src="~/img/pdf.svg" class="pdf-svg" />
                                            </a>
                                            <label class="d-flex m-0 bold-text" for=""><span>PDF</span></label>
                                            <div class="custom-file">
                                                <input asp-for="PDF" class="form-control custom-file-input" multiple accept=".pdf" />
                                                <label class="custom-file-label"></label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="PDF"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <h3 class="main-color">Country</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CountryId" class="control-label"></label>
                                            <select class="w-100 selectbox" asp-for="CountryId" asp-items="Model.Countries">
                                            </select>
                                            <span asp-validation-for="CountryId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Add" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="licence" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/show_file_name.js"></script>
    <script src="~/vendor/ckeditor/ckeditor.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}