@model NewsEditViewModel
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit News</h1>
                <div class="row main-color">
                    <div class="col-12">
                        <form asp-action="edit" asp-controller="news" asp-area="admin" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="container">
                                <div class="row">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Type</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <select asp-for="Type" class="selectbox">
                                                <option value="news">News</option>
                                                <option value="community">Community</option>
                                            </select>
                                            <span asp-validation-for="Type" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Title</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_AZ" class="control-label"></label>
                                            <input asp-for="Title_AZ" class="form-control">
                                            <span asp-validation-for="Title_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_RU" class="control-label"></label>
                                            <input asp-for="Title_RU" class="form-control">
                                            <span asp-validation-for="Title_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_EN" class="control-label"></label>
                                            <input asp-for="Title_EN" class="form-control">
                                            <span asp-validation-for="Title_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_TR" class="control-label"></label>
                                            <input asp-for="Title_TR" class="form-control">
                                            <span asp-validation-for="Title_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Slug</h3>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Slug" class="control-label"></label>
                                            <input readonly asp-for="Slug" class="form-control">
                                            <span asp-validation-for="Slug" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Content</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_AZ" class="control-label"></label>
                                            <textarea asp-for="Content_AZ" class="form-control">@Html.Raw(Model.Content_AZ)</textarea>
                                            <span asp-validation-for="Content_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_RU" class="control-label"></label>
                                            <textarea asp-for="Content_RU" class="form-control">@Html.Raw(Model.Content_RU)</textarea>
                                            <span asp-validation-for="Content_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_EN" class="control-label"></label>
                                            <textarea asp-for="Content_EN" class="form-control">@Html.Raw(Model.Content_EN)</textarea>
                                            <span asp-validation-for="Content_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_TR" class="control-label"></label>
                                            <textarea asp-for="Content_TR" class="form-control">@Html.Raw(Model.Content_TR)</textarea>
                                            <span asp-validation-for="Content_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Location</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Location_AZ" class="control-label"></label>
                                            <input asp-for="Location_AZ" class="form-control" />
                                            <span asp-validation-for="Location_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Location_RU" class="control-label"></label>
                                            <input asp-for="Location_RU" class="form-control" />
                                            <span asp-validation-for="Location_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Location_EN" class="control-label"></label>
                                            <input asp-for="Location_EN" class="form-control" />
                                            <span asp-validation-for="Location_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Location_TR" class="control-label"></label>
                                            <input asp-for="Location_TR" class="form-control" />
                                            <span asp-validation-for="Location_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Date</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <input type="date" value="@Model.CreatedAt.ToString("yyyy-MM-dd")" asp-for="CreatedAt" class="form-control" />
                                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Photo</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            @{
                                                var photoPath = "/uploads/" + Model.PhotoName;
                                            }
                                            <img class="table-image-item" src="@photoPath" />
                                            <label class="d-flex m-0 bold-text" for=""><span>Photo</span></label>
                                            <div class="custom-file">
                                                <input asp-for="Photo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label">
                                                    Change title photo...
                                                </label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="Photo"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="news" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/vendor/slug/slug.js"></script>
    <script src="~/js/news-admin.js"></script>
    <script src="~/js/show_file_name.js"></script>
    <script src="~/vendor/ckeditor/ckeditor.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        ClassicEditor
            .create(document.querySelector('#Content_AZ'), {
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList', 'link', 'imageUpload'],
                simpleUpload: {
                    uploadUrl: '/admin/news/upload',
                    withCredentials: true
                }
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#Content_RU'), {
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList', 'link', 'imageUpload'],
                simpleUpload: {
                    uploadUrl: '/admin/news/upload',
                    withCredentials: true
                }
            })
            .catch(error => {
                console.error(error);
            })


        ClassicEditor
            .create(document.querySelector('#Content_EN'), {
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList', 'link', 'imageUpload'],
                simpleUpload: {
                    uploadUrl: '/admin/news/upload',
                    withCredentials: true
                }
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#Content_TR'), {
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList', 'link', 'imageUpload'],
                simpleUpload: {
                    uploadUrl: '/admin/news/upload',
                    withCredentials: true
                }
            })
            .catch(error => {
                console.error(error);
            })
    </script>
}