@model Project
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-white">Project Details</h6>
                        <div>
                            <a href="/admin/project" class="btn btn-primary">Back to List</a>
                            <a href="/admin/project/edit/@Model.Slug" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div>
                            <div class="row main-color">
                                <div class="col-12">
                                    <h4 class="main-color">Name</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_AZ)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_AZ)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_RU)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_RU)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_EN)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_EN)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Name_TR)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name_TR)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Type</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Type)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Type)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Location</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Location_AZ)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Location_AZ)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Location_RU)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Location_RU)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Location_EN)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Location_EN)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Location_TR)
                                        </div>
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Location_TR)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Description</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Description_AZ)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.Description_AZ)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Description_RU)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.Description_RU)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Description_EN)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.Description_EN)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Description_TR)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.Description_TR)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Dates</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.StartingDate)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.StartingDate.ToString("MM/dd/yyyy"))
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.PlannedCompletionDate)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.PlannedCompletionDate?.ToString("MM/dd/yyyy"))
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.CompletedDate)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.CompletedDate?.ToString("MM/dd/yyyy"))
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Title Photo</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            Title Photo
                                        </div>
                                        <div class="col-6">
                                            @{
                                                var photoPath = "/uploads/" + Model.TitlePhotoName;
                                            }
                                            <img src="@photoPath" class="table-image-item" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Optional Photos</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            Optional Photos
                                        </div>
                                        <div class="col-6">
                                            @foreach (var projectPhoto in Model.ProjectPhotos)
                                            {
                                                var projectPhotoPath = "/uploads/" + projectPhoto.PhotoName;

                                                <img src="@projectPhotoPath" class="table-image-item my-2" />
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Showing On</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.ShowOnHomePage)
                                        </div>
                                        <div class="col-6">
                                            @if (Model.ShowOnHomePage)
                                            {
                                                <span>Showing</span>
                                            }
                                            else
                                            {
                                                <span>Not showing</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.ShowAsGallery)
                                        </div>
                                        <div class="col-6">
                                            @if (Model.ShowAsGallery)
                                            {
                                                <span>Showing</span>
                                            }
                                            else
                                            {
                                                <span>Not showing</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.ShowOnHomePageAsGallery)
                                        </div>
                                        <div class="col-6">
                                            @if (Model.ShowOnHomePageAsGallery)
                                            {
                                                <span>Showing</span>
                                            }
                                            else
                                            {
                                                <span>Not showing</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                @if (Model.Type == "current")
                                {
                                    <div class="col-12 col-md-6">
                                        <div class="row">
                                            <div class="col-6 font-weight-bold">
                                                @Html.DisplayNameFor(model => model.CurrentOrder)
                                            </div>
                                            <div class="col-6">
                                                @Model.CurrentOrder
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.GalleryOrder)
                                        </div>
                                        <div class="col-6">
                                            @Model.GalleryOrder
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.HomePageOrder)
                                        </div>
                                        <div class="col-6">
                                            @Model.HomePageOrder
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

