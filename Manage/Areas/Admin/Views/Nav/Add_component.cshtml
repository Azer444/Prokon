@model NavComponent

@{ 
    var navTitleComponentId = Url.ActionContext.RouteData.Values["id"];
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Add Nav Component</h1>
                <div class="row">
                    <div class="col-12">
                        <form asp-action="add_component" asp-controller="nav" asp-area="admin" method="post">
                            <input asp-for="Id" type="hidden" value="0" />
                            <input type="hidden" asp-for="NavTitleComponentId" value="@navTitleComponentId" />
                            <div class="container">
                                <div class="text-item" order="1">
                                    <div class="row">
                                        <div class="col-12 mt-3">
                                            <h3 class="main-color">Title</h3>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Title_AZ" class="control-label main-color"></label>
                                                <input asp-for="Title_AZ" class="form-control"/>
                                                <span asp-validation-for="Title_AZ" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Title_RU" class="control-label main-color"></label>
                                                <input asp-for="Title_RU" class="form-control"/>
                                                <span asp-validation-for="Title_RU" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Title_EN" class="control-label main-color"></label>
                                                <input asp-for="Title_EN" class="form-control"/>
                                                <span asp-validation-for="Title_EN" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Title_TR" class="control-label main-color"></label>
                                                <input asp-for="Title_TR" class="form-control"/>
                                                <span asp-validation-for="Title_TR" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 mt-3">
                                            <h3 class="main-color">Link</h3>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Link" class="control-label main-color"></label>
                                                <input asp-for="Link" class="form-control"/>
                                                <span asp-validation-for="Link" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Add" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="nav" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
