@model ContactMessage
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-white">Message Details</h6>
                        <div>
                            <a asp-action="index" asp-controller="message" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div>
                            <div class="row main-color">
                                <div class="col-12">
                                    <h4 class="main-color">Name</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Name)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Email</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Subject</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Subject)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">Message</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6">
                                            @Html.DisplayFor(model => model.Message)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>