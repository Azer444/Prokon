            <div class="container-fluid">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-white">Configuration Details</h6>
                        <div>
                            <a asp-action="index" asp-controller="configuration" class="btn btn-primary">Back to List</a>
                            <a asp-action="edit" asp-controller="configuration" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div>
                            <div class="row main-color">
                                <div class="col-12 mt-4">
                                    <h4 class="main-color">Logo</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            Header Logo
                                        </div>
                                        <div class="col-6">
                                            @{
                                                var photoPath = "/uploads/" + Model.FirstLogoName;
                                            }
                                            <img src="@photoPath" class="table-image-item" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            Footer Logo
                                        </div>
                                        <div class="col-6">
                                            @{
                                                photoPath = "/uploads/" + Model.SecondLogoName;
                                            }
                                            <img src="@photoPath" class="table-image-item" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-4">
                                    <h4 class="main-color">Head Office</h4>
                                    <hr />
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="row">
                                        <div class="col-6 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.HeadOffice_AZ)
                                        </div>
                                        <div class="col-6">
                                            @Html.Raw(Model.HeadOffice_AZ)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
