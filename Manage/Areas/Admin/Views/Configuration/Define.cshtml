@model SiteConfig

@{
    ViewData["Title"] = "Define Site Configuration";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Define Site Configuration</h1>
                <div class="row">
                    <div class="col-12">
                        <form asp-action="define" asp-controller="configuration" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="container">
                                <div class="row main-color">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Logo</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="d-flex m-0 bold-text" for=""><span>First Logo</span></label>
                                            <div class="custom-file">
                                                <input asp-for="FirstLogo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label">Define first logo...</label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="FirstLogo"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="d-flex m-0 bold-text" for=""><span>Second Logo</span></label>
                                            <div class="custom-file">
                                                <input asp-for="SecondLogo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label">Define second logo...</label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="SecondLogo"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Head Office</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="HeadOffice_AZ" class="control-label"></label>
                                            <textarea asp-for="HeadOffice_AZ" class="form-control"></textarea>
                                            <span asp-validation-for="HeadOffice_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="HeadOffice_RU" class="control-label"></label>
                                            <textarea asp-for="HeadOffice_RU" class="form-control"></textarea>
                                            <span asp-validation-for="HeadOffice_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="HeadOffice_EN" class="control-label"></label>
                                            <textarea asp-for="HeadOffice_EN" class="form-control"></textarea>
                                            <span asp-validation-for="HeadOffice_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="HeadOffice_TR" class="control-label"></label>
                                            <textarea asp-for="HeadOffice_TR" class="form-control"></textarea>
                                            <span asp-validation-for="HeadOffice_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Linkedin</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LinkedinText" class="control-label"></label>
                                            <input asp-for="LinkedinText" class="form-control">
                                            <span asp-validation-for="LinkedinText" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LinkedinText_RU" class="control-label"></label>
                                            <input asp-for="LinkedinText_RU" class="form-control">
                                            <span asp-validation-for="LinkedinText_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LinkedinLink" class="control-label"></label>
                                            <input asp-for="LinkedinLink" class="form-control">
                                            <span asp-validation-for="LinkedinLink" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Facebook</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FacebookText" class="control-label"></label>
                                            <input asp-for="FacebookText" class="form-control">
                                            <span asp-validation-for="FacebookText" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FacebookText_RU" class="control-label"></label>
                                            <input asp-for="FacebookText_RU " class="form-control">
                                            <span asp-validation-for="FacebookText_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FacebookLink" class="control-label"></label>
                                            <input asp-for="FacebookLink" class="form-control">
                                            <span asp-validation-for="FacebookLink" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Twitter</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TwitterText" class="control-label"></label>
                                            <input asp-for="TwitterText" class="form-control">
                                            <span asp-validation-for="TwitterText" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TwitterText_RU" class="control-label"></label>
                                            <input asp-for="TwitterText_RU " class="form-control">
                                            <span asp-validation-for="TwitterText_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="TwitterLink" class="control-label"></label>
                                            <input asp-for="TwitterLink" class="form-control">
                                            <span asp-validation-for="TwitterLink" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Copyright Text</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CopyrightText_AZ" class="control-label"></label>
                                            <input asp-for="CopyrightText_AZ" class="form-control">
                                            <span asp-validation-for="CopyrightText_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CopyrightText_RU" class="control-label"></label>
                                            <input asp-for="CopyrightText_RU " class="form-control">
                                            <span asp-validation-for="CopyrightText_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CopyrightText_EN" class="control-label"></label>
                                            <input asp-for="CopyrightText_EN" class="form-control">
                                            <span asp-validation-for="CopyrightText_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CopyrightText_TR" class="control-label"></label>
                                            <input asp-for="CopyrightText_TR" class="form-control">
                                            <span asp-validation-for="CopyrightText_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Contact</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Phone" class="control-label"></label>
                                            <input asp-for="Phone " class="form-control">
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Footer Partner</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FooterPartnerPhotos" class="control-label"></label>
                                            <div class="custom-file">
                                                <input asp-for="FooterPartnerPhotos" class="form-control custom-file-input" multiple accept="image/*" />
                                                <label class="custom-file-label"></label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="FooterPartnerPhotos"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Define" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="configuration" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/show_file_name.js"></script>
    <script src="~/vendor/ckeditor/ckeditor.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        ClassicEditor
            .create(document.querySelector('#HeadOffice_AZ'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#HeadOffice_RU'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })


        ClassicEditor
            .create(document.querySelector('#HeadOffice_EN'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#HeadOffice_TR'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })
    </script>
}
