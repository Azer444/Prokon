@model VMVIndexViewModel

@{
    ViewData["Title"] = "VMV";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3">
                        <h6 class="m-0 font-weight-bold text-white">VMV Page</h6>
                    </div>
                    <div class="card-body">
                        <h2 class="main-color">Main Photo</h2>
                        @if (Model.VMVMainPhoto == null)
                        {
                            <a href="/admin/vmv/define_main_photo/" class="btn btn-primary mb-3">Define Main Photo</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Photo</th>
                                            <th class="main-color text-center">Title(AZ)</th>
                                            <th class="main-color text-center">Title(RU)</th>
                                            <th class="main-color text-center">Title(EN)</th>
                                            <th class="main-color text-center">Title(TR)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var photoPath = "/uploads/" + Model.VMVMainPhoto.PhotoName;
                                            <tr id="@Model.VMVMainPhoto.Id">
                                                <td class="text-center">
                                                    <img src="@photoPath" class="table-image-item" />
                                                </td>
                                                <td class="text-center">@Model.VMVMainPhoto.Title_AZ</td>
                                                <td class="text-center">@Model.VMVMainPhoto.Title_RU</td>
                                                <td class="text-center">@Model.VMVMainPhoto.Title_EN</td>
                                                <td class="text-center">@Model.VMVMainPhoto.Title_TR</td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a class="btn btn-primary" href="/admin/vmv/edit_main_photo/@Model.VMVMainPhoto.Id">Edit</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <br />

                        <h2 class="main-color">VMV Components</h2>
                        <a href="/admin/vmv/add_vmv_component" class="btn btn-primary mb-3">Add Component</a>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="main-color text-center">Photo</th>
                                        <th class="main-color text-center">Title(AZ)</th>
                                        <th class="main-color text-center">Title(RU)</th>
                                        <th class="main-color text-center">Title(EN)</th>
                                        <th class="main-color text-center">Title(TR)</th>
                                        <th class="main-color text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vmvComponent in Model.VMVComponents)
                                    {
                                        var photoPath = "/uploads/" + vmvComponent.PhotoName;
                                        <tr id="@vmvComponent.Id">
                                            <td class="text-center">
                                                <img src="@photoPath" class="table-image-item" />
                                            </td>
                                            <td class="text-center">@vmvComponent.Title_AZ</td>
                                            <td class="text-center">@vmvComponent.Title_RU</td>
                                            <td class="text-center">@vmvComponent.Title_EN</td>
                                            <td class="text-center">@vmvComponent.Title_TR</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a class="btn btn-primary" href="/admin/vmv/edit_vmv_component/@vmvComponent.Id">Edit</a>
                                                    <a class="btn btn-info mx-2" href="/admin/vmv/details_vmv_component/@vmvComponent.Id">Details</a>
                                                    <a class="btn btn-danger delete-vmv-component text-white">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <br />

                        <h2 class="main-color">Values Components</h2>
                        <a href="/admin/vmv/add_values_component/" class="btn btn-primary mb-3">Add Component</a>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="main-color text-center">Photo</th>
                                        <th class="main-color text-center">Title(AZ)</th>
                                        <th class="main-color text-center">Title(RU)</th>
                                        <th class="main-color text-center">Title(EN)</th>
                                        <th class="main-color text-center">Title(TR)</th>
                                        <th class="main-color text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var valuesComponent in Model.ValuesComponents)
                                    {
                                        var photoPath = "/uploads/" + valuesComponent.PhotoName;
                                        <tr id="@valuesComponent.Id">
                                            <td class="text-center">
                                                <img src="@photoPath" class="table-image-item" />
                                            </td>
                                            <td class="text-center">@valuesComponent.Title_AZ</td>
                                            <td class="text-center">@valuesComponent.Title_RU</td>
                                            <td class="text-center">@valuesComponent.Title_EN</td>
                                            <td class="text-center">@valuesComponent.Title_TR</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a href="/admin/vmv/edit_values_component/@valuesComponent.Id" class="btn btn-primary">Edit</a>
                                                    <a href="/admin/vmv/details_values_component/@valuesComponent.Id" class="btn btn-info mx-2">Details</a>
                                                    <a class="btn btn-danger delete-values-component text-white">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <br />

                        <h2 class="main-color">Values Layout Content</h2>
                        @if (Model.ValuesLayoutContent == null)
                        {
                            <a href="/admin/vmv/define_values_layout_content/" class="btn btn-primary mb-3">Define Content</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Title Text (AZ)</th>
                                            <th class="main-color text-center">Title Text (RU)</th>
                                            <th class="main-color text-center">Title Text (EN)</th>
                                            <th class="main-color text-center">Title Text (TR)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr id="@Model.ValuesLayoutContent?.Id">
                                            <td class="text-center">@Model.ValuesLayoutContent.TitleText_AZ</td>
                                            <td class="text-center">@Model.ValuesLayoutContent.TitleText_RU</td>
                                            <td class="text-center">@Model.ValuesLayoutContent.TitleText_EN</td>
                                            <td class="text-center">@Model.ValuesLayoutContent.TitleText_TR</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a href="/admin/vmv/edit_values_layout_content/@Model.ValuesLayoutContent?.Id" class="btn btn-primary">Edit</a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }

                        <br />

                        <h2 class="main-color">Page Access Component</h2>
                        @if (Model.PageAccessComponent == null)
                        {
                            <a href="/admin/vmv/define_page_access_component/" class="btn btn-primary mb-3">Define</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Access1 (EN)</th>
                                            <th class="main-color text-center">Access2 (EN)</th>
                                            <th class="main-color text-center">Access3 (EN)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            <tr id="@Model.PageAccessComponent.Id">
                                                <td class="text-center">@Model.PageAccessComponent.Access1_EN</td>
                                                <td class="text-center">@Model.PageAccessComponent.Access2_EN</td>
                                                <td class="text-center">@Model.PageAccessComponent.Access3_EN</td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a class="btn btn-info mx-2" href="/admin/vmv/details_page_access_component/@Model.PageAccessComponent.Id">Details</a>
                                                        <a class="btn btn-primary" href="/admin/vmv/edit_page_access_component/@Model.PageAccessComponent.Id">Edit</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).on("click", ".delete-vmv-component", function () {

            var deleteBtn = $(this);
            var vmvComponent = $(this).parents().eq(2);

            var data = {
                id: $(vmvComponent).attr('id')
            }

            $.ajax({
                url: "/admin/vmv/delete_vmv_component",
                data: data,
                success: function () {
                    $(deleteBtn).text("Deleted");
                    $(deleteBtn).css("pointer-events", "none");
                    $(vmvComponent).fadeOut("normal", function () {
                        $(this).remove();
                    });
                }
            })
        })

        $(document).on("click", ".delete-values-component", function () {

            var deleteBtn = $(this);
            var valuesComponent = $(this).parents().eq(2);

            var data = {
                id: $(valuesComponent).attr('id')
            }

            $.ajax({
                url: "/admin/vmv/delete_values_component",
                data: data,
                success: function () {
                    $(deleteBtn).text("Deleted");
                    $(deleteBtn).removeClass("white-color").addClass("alert-success-text white-background confirmed");
                    $(deleteBtn).css("pointer-events", "none");
                    $(valuesComponent).fadeOut("normal", function () {
                        $(this).remove();
                    });
                }
            })
        })
    </script>
}


