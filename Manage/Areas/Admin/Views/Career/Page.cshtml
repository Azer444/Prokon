                                                <td class="text-center">@Model.CareerFormComponent.Title_AZ</td>
                                                <td class="text-center">@Model.CareerFormComponent.Title_RU</td>
                                                <td class="text-center">@Model.CareerFormComponent.Title_EN</td>
                                                <td class="text-center">@Model.CareerFormComponent.Title_TR</td>
                                                <td class="text-center">
