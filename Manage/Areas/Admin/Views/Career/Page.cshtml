@model CareerPageViewModel

@{
    ViewData["Title"] = "Career Page";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3">
                        <h6 class="m-0 font-weight-bold text-white">Career Page</h6>
                    </div>
                    <div class="card-body">
                        <h2 class="main-color">Main Photo</h2>
                        @if (Model.PageMainPhoto == null)
                        {
                            <a href="/admin/career/define_main_photo" class="btn btn-primary mb-3">Define Main Photo</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Photo</th>
                                            <th class="main-color text-center">Title(AZ)</th>
                                            <th class="main-color text-center">Title(RU)</th>
                                            <th class="main-color text-center">Title(EN)</th>
                                            <th class="main-color text-center">Title(TR)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var photoPath = "/uploads/" + Model.PageMainPhoto.PhotoName;
                                            <tr id="@Model.PageMainPhoto.Id">
                                                <td class="text-center">
                                                    <img src="@photoPath" class="table-image-item" />
                                                </td>
                                                <td class="text-center">@Model.PageMainPhoto.Title_AZ</td>
                                                <td class="text-center">@Model.PageMainPhoto.Title_RU</td>
                                                <td class="text-center">@Model.PageMainPhoto.Title_EN</td>
                                                <td class="text-center">@Model.PageMainPhoto.Title_TR</td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a class="btn btn-primary" href="/admin/career/edit_main_photo/@Model.PageMainPhoto.Id">Edit</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <br />

                        <h2 class="main-color">Job Opportunities</h2>
                        <h4 class="main-color">Components</h4>
                        <a href="/admin/career/add_job_component" class="btn btn-primary mb-3">Add Component</a>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="main-color text-center">Photo</th>
                                        <th class="main-color text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var jobComponent in Model.JobComponents)
                                    {
                                        var photoPath = "/uploads/" + jobComponent.PhotoName;
                                        <tr id="@jobComponent.Id">
                                            <td class="text-center">
                                                <img src="@photoPath" class="table-image-item" />
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a class="btn btn-primary" href="/admin/career/edit_job_component/@jobComponent.Id">Edit</a>
                                                    <a class="btn btn-info mx-2" href="/admin/career/details_job_component/@jobComponent.Id">Details</a>
                                                    <a class="btn btn-danger delete-job-component text-white">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <br />

                        <h2 class="main-color">Internship Opportunities</h2>
                        <h4 class="main-color">Components</h4>
                        <a href="/admin/career/add_internship_component" class="btn btn-primary mb-3">Add Component</a>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="main-color text-center">Photo</th>
                                        <th class="main-color text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var internshipComponent in Model.InternshipComponents)
                                    {
                                        var photoPath = "/uploads/" + internshipComponent.PhotoName;
                                        <tr id="@internshipComponent.Id">
                                            <td class="text-center">
                                                <img src="@photoPath" class="table-image-item" />
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a class="btn btn-primary" href="/admin/career/edit_internship_component/@internshipComponent.Id">Edit</a>
                                                    <a class="btn btn-info mx-2" href="/admin/career/details_internship_component/@internshipComponent.Id">Details</a>
                                                    <a class="btn btn-danger delete-internship-component text-white">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @*<br />

                        <h2 class="main-color">General Application</h2>
                        <h4 class="main-color">Content</h4>
                        @if (Model.CareerAppContent == null)
                        {
                            <a href="/admin/career/define_app_content" class="btn btn-primary mb-3">Define</a>
                        }
                        else
