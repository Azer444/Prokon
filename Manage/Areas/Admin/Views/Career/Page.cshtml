                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Content (EN)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr id="@Model.CareerAppContent.Id">
                                            <td class="text-center">@Html.Raw(Model.CareerAppContent.Content_EN)</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a class="btn btn-primary" href="/admin/career/edit_app_content">Edit</a>
                                                    <a class="btn btn-info mx-2" href="/admin/career/details_app_content">Details</a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }

                        <br />*@

                        <h2 class="main-color">Form Component</h2>
                        @if (Model.CareerFormComponent == null)
                        {
                            <a href="/admin/career/define_form_component/" class="btn btn-primary mb-3">Define</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
