                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).on("click", ".delete-job-opportunity", function () {

            var deleteBtn = $(this);
            var jobOpportunity = $(this).parents().eq(2);

            var data = {
                id: $(jobOpportunity).attr('id')
            }

            $.ajax({
                url: "/admin/career/delete_job_opportunity",
                data: data,
                success: function () {
                    $(deleteBtn).text("Deleted");
                    $(deleteBtn).css("pointer-events", "none");
                    $(jobOpportunity).fadeOut("normal", function () {
                        $(this).remove();
                    });
                }
            })
        })

        $(document).on("click", ".delete-internship-opportunity", function () {

            var deleteBtn = $(this);
            var internshipOpportunity = $(this).parents().eq(2);

            var data = {
                id: $(internshipOpportunity).attr('id')
            }

            $.ajax({
                url: "/admin/career/delete_internship_opportunity",
                data: data,
                success: function () {
                    $(deleteBtn).text("Deleted");
                    $(deleteBtn).css("pointer-events", "none");
                    $(internshipOpportunity).fadeOut("normal", function () {
                        $(this).remove();
                    });
                }
            })
        })
    </script>
}
