@model CareerComponentEditViewModel
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit Job Component</h1>
                <div class="row main-color">
                    <div class="col-12">
                        <form asp-action="edit_job_component" asp-controller="career" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Content</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_AZ" class="control-label"></label>
                                            <textarea asp-for="Content_AZ" class="form-control"></textarea>
                                            <span asp-validation-for="Content_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_RU" class="control-label"></label>
                                            <textarea asp-for="Content_RU" class="form-control"></textarea>
                                            <span asp-validation-for="Content_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_EN" class="control-label"></label>
                                            <textarea asp-for="Content_EN" class="form-control"></textarea>
                                            <span asp-validation-for="Content_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_TR" class="control-label"></label>
                                            <textarea asp-for="Content_TR" class="form-control"></textarea>
                                            <span asp-validation-for="Content_TR" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Photo</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            @{
                                                var photoPath = "/uploads/" + Model.PhotoName;
                                            }
                                            <img class="table-image-item" src="@photoPath" />
                                            <label class="d-flex m-0 bold-text" for=""><span>Photo</span></label>
                                            <div class="custom-file">
                                                <input asp-for="Photo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label">
                                                    Change photo...
                                                </label>
                                            </div>
                                            <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="Photo"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="page" asp-controller="career" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/show_file_name.js"></script>
    <script src="~/vendor/ckeditor/ckeditor.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        ClassicEditor
            .create(document.querySelector('#Content_AZ'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#Content_RU'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })


        ClassicEditor
            .create(document.querySelector('#Content_EN'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#Content_TR'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })
    </script>
}

