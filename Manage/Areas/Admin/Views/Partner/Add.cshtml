@model Partner

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Add Partner</h1>
                <div class="row main-color">
                    <div class="col-md-4">
                        <form asp-action="add" asp-controller="partner" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="d-flex m-0 bold-text" for=""><span>Logo <b class="text-danger">*</b></span></label>
                                <div class="custom-file">
                                    <input asp-for="Logo" class="form-control custom-file-input" accept="image/*" />
                                    <label class="custom-file-label"></label>
                                </div>
                                <span class="text-danger validate-message d-inline-block py-2" asp-validation-for="Logo"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Add" class="btn btn-primary" />
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="partner">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/show_file_name.js"></script>
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
