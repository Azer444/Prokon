@model VMVViewModel

@{
    var lang = Url.ActionContext.RouteData.Values["lang"].ToString();
    ViewData["Title"] = "Prokon | VMV";
    var mainPhotoPath = "/uploads/" + Model.PageMainPhoto?.PhotoName;
    ViewData["Image"] = "uploads/" + Model.PageMainPhoto?.PhotoName;
    ViewData["Description"] = Model.PageMainPhoto?.Title_EN;
    ViewData["Link"] = "vmv";
}

@await Html.PartialAsync("_HeaderPartial", Model.HeaderPartialViewModel)

<main>
    <section class="main-photo-section">
        <div class="main-photo position-relative" style="background-image: url('@mainPhotoPath');"></div>
        <div class="cover">
            <div class="container">
                <p class="main-photo-title position-absolute">
                    @if (lang == "az")
                    {
                        @Model.PageMainPhoto?.Title_AZ
                    }
                    else if (lang == "ru")
                    {
                        @Model.PageMainPhoto?.Title_RU
                    }
                    else if (lang == "en")
                    {
                        @Model.PageMainPhoto?.Title_EN
                    }
                    else if (lang == "tr")
                    {
                        @Model.PageMainPhoto?.Title_TR
                    }
                </p>
            </div>
        </div>
    </section>

    <section class="page-content-section">
        <div class="container">
            <div class="page-access">
                @if (lang == "az")
                {
                    <a href="/az" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access1_AZ
                    </a>
                    <span class="black-color pr-2">/</span>
                    <a href="/az/vmv" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access2_AZ
                    </a>
                    if (!string.IsNullOrEmpty(Model.PageAccessComponent?.Access3_AZ))
                    {
                        <span class="black-color pr-2">/</span>
                        <a href="/az/vmv" class="grey-color">
                            @Model.PageAccessComponent?.Access3_AZ
                        </a>
                    }
                }
                else if (lang == "ru")
                {
                    <a href="/ru" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access1_RU
                    </a>
                    <span class="black-color pr-2">/</span>
                    <a href="/ru/vmv" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access2_RU
                    </a>
                    if (!string.IsNullOrEmpty(Model.PageAccessComponent?.Access3_RU))
                    {
                        <span class="black-color pr-2">/</span>
                        <a href="/ru/vmv" class="grey-color">
                            @Model.PageAccessComponent.Access3_RU
                        </a>
                    }
                }
                else if (lang == "en")
                {
                    <a href="/" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access1_EN
                    </a>
                    <span class="black-color pr-2">/</span>
                    <a href="/en/vmv" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access2_EN
                    </a>
                    if (!string.IsNullOrEmpty(Model.PageAccessComponent?.Access3_EN))
                    {
                        <span class="black-color pr-2">/</span>
                        <a href="/en/vmv" class="grey-color">
                            @Model.PageAccessComponent?.Access3_EN
                        </a>
                    }
                }
                else if (lang == "tr")
                {
                    <a href="/" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access1_TR
                    </a>
                    <span class="black-color pr-2">/</span>
                    <a href="/tr/vmv" class="black-color pr-2">
                        @Model.PageAccessComponent?.Access2_TR
                    </a>
                    if (!string.IsNullOrEmpty(Model.PageAccessComponent?.Access3_TR))
                    {
                        <span class="black-color pr-2">/</span>
                        <a href="/tr/vmv" class="grey-color">
                            @Model.PageAccessComponent?.Access3_TR
                        </a>
                    }
                }
            </div>
            @{
                var order = 1;

                foreach (var vmvComponent in Model.VMVComponents)
                {
                    if (order % 2 == 1)
                    {
                        <div class="vmv-component row">
                            <div class="col-12 col-md-4 mt-4 mt-md-0 d-flex align-items-center">
                                <div class="vmv-component-text w-100">
                                    <h1 class="main-color section-title">
                                        @if (lang == "az")
                                        {
                                            @vmvComponent.Title_AZ
                                        }
                                        else if (lang == "ru")
                                        {
                                            @vmvComponent.Title_RU
                                        }
                                        else if (lang == "en")
                                        {
                                            @vmvComponent.Title_EN
                                        }
                                        else if (lang == "tr")
                                        {
                                            @vmvComponent.Title_TR
                                        }
                                    </h1>
                                    <div class="w-100 main-color section-text">
                                        @if (lang == "az")
                                        {
                                            @Html.Raw(vmvComponent.Content_AZ)
                                        }
                                        else if (lang == "ru")
                                        {
                                            @Html.Raw(vmvComponent.Content_RU)
                                        }
                                        else if (lang == "en")
                                        {
                                            @Html.Raw(vmvComponent.Content_EN)
                                        }
                                        else if (lang == "tr")
                                        {
                                            @Html.Raw(vmvComponent.Content_TR)
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-8 d-flex align-items-center">
                                @{
                                    var photoPath = "/uploads/" + vmvComponent.PhotoName;
                                }
                                <img class="w-100" src="@photoPath" alt="">
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="vmv-component row">
                            <div class="col-12 col-md-8 d-flex align-items-center order-12 order-md-1">
                                @{
                                    var photoPath = "/uploads/" + vmvComponent.PhotoName;
                                }
                                <img class="w-100" src="@photoPath" alt="">
                            </div>
                            <div class="col-12 col-md-4 mt-4 mt-md-0 d-flex align-items-center order-1 order-md-12">
                                <div class="vmv-component-text w-100">
                                    <h1 class="main-color section-title">
                                        @if (lang == "az")
                                        {
                                            @vmvComponent.Title_AZ
                                        }
                                        else if (lang == "ru")
                                        {
                                            @vmvComponent.Title_RU
                                        }
                                        else if (lang == "en")
                                        {
                                            @vmvComponent.Title_EN
                                        }
                                        else if (lang == "tr")
                                        {
                                            @vmvComponent.Title_TR
                                        }
                                    </h1>
                                    <div class="w-100 main-color section-text">
                                        @if (lang == "az")
                                        {
                                            @Html.Raw(vmvComponent.Content_AZ)
                                        }
                                        else if (lang == "ru")
                                        {
                                            @Html.Raw(vmvComponent.Content_RU)
                                        }
                                        else if (lang == "en")
                                        {
                                            @Html.Raw(vmvComponent.Content_EN)
                                        }
                                        else if (lang == "tr")
                                        {
                                            @Html.Raw(vmvComponent.Content_TR)
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    order++;
                }
            }
            <h1 class="main-color section-title text-center">
                @if (lang == "az")
                {
                    @Model.ValuesLayoutContent?.TitleText_AZ
                }
                else if (lang == "ru")
                {
                    @Model.ValuesLayoutContent?.TitleText_RU
                }
                else if (lang == "en")
                {
                    @Model.ValuesLayoutContent?.TitleText_EN
                }
                else if (lang == "tr")
                {
                    @Model.ValuesLayoutContent?.TitleText_TR
                }
            </h1>
            @{
                var orderr = 1;

                foreach (var valuesComponent in Model.ValuesComponents)
                {
                    if (orderr % 2 == 1)
                    {
                        <div class="vmv-component row mt-5">
                            <div class="col-12 col-md-4 mt-3 mt-md-0 d-flex align-items-center">
                                <div class="w-100">
                                    <h1 class="values-content-title">
                                        @if (lang == "az")
                                        {
                                            @valuesComponent.Title_AZ
                                        }
                                        else if (lang == "ru")
                                        {
                                            @valuesComponent.Title_RU
                                        }
                                        else if (lang == "en")
                                        {
                                            @valuesComponent.Title_EN
                                        }
                                        else if (lang == "tr")
                                        {
                                            @valuesComponent.Title_TR
                                        }
                                    </h1>
                                    <div class="vmv-component-text black-color">
                                        @if (lang == "az")
                                        {
                                            @Html.Raw(valuesComponent.Content_AZ)
                                        }
                                        else if (lang == "ru")
                                        {
                                            @Html.Raw(valuesComponent.Content_RU)
                                        }
                                        else if (lang == "en")
                                        {
                                            @Html.Raw(valuesComponent.Content_EN)
                                        }
                                        else if (lang == "tr")
                                        {
                                            @Html.Raw(valuesComponent.Content_TR)
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-8 d-flex align-items-center">
                                @{
                                    var photoPath = "/uploads/" + valuesComponent.PhotoName;
                                }
                                <img class="w-100" src="@photoPath" alt="">
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="vmv-component row mt-5">
                            <div class="col-12 col-md-8 d-flex align-items-center order-12 order-md-1">
                                @{
                                    var photoPath = "/uploads/" + valuesComponent.PhotoName;
                                }
                                <img class="w-100" src="@photoPath" alt="">
                            </div>
                            <div class="col-12 col-md-4 mt-3 mt-md-0 d-flex align-items-center order-1 order-md-12">
                                <div class="w-100">
                                    <h1 class="values-content-title text-right text-md-left">
                                        @if (lang == "az")
                                        {
                                            @valuesComponent.Title_AZ
                                        }
                                        else if (lang == "ru")
                                        {
                                            @valuesComponent.Title_RU
                                        }
                                        else if (lang == "en")
                                        {
                                            @valuesComponent.Title_EN
                                        }
                                        else if (lang == "tr")
                                        {
                                            @valuesComponent.Title_TR
                                        }
                                    </h1>
                                    <div class="vmv-component-text black-color text-right text-md-left">
                                        @if (lang == "az")
                                        {
                                            @Html.Raw(valuesComponent.Content_AZ)
                                        }
                                        else if (lang == "ru")
                                        {
                                            @Html.Raw(valuesComponent.Content_RU)
                                        }
                                        else if (lang == "en")
                                        {
                                            @Html.Raw(valuesComponent.Content_EN)
                                        }
                                        else if (lang == "tr")
                                        {
                                            @Html.Raw(valuesComponent.Content_TR)
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    orderr++;
                }
            }
        </div>
    </section>
</main>

@await Html.PartialAsync("_FooterPartial", Model.FooterPartialViewModel)
@await Html.PartialAsync("_MobileMenuPartial", Model.MobileMenuPartialViewModel)
