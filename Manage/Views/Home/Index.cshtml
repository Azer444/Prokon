    <section class="gallery">
        <div class="container">
            <div class="gallery-section-top">
                @{
                    var gallerySectionTitleContent = Model.SectionLayoutContents.FirstOrDefault(c => c.SectionName == "gallery");
                }
                @{
                    if (gallerySectionTitleContent != null)
                    {
                        <h1 class="main-color section-title text-center">
                            @{
                                if (lang == "az")
                                {
                                    @gallerySectionTitleContent.TitleText_AZ
                                }
                                else if (lang == "ru")
                                {
                                    @gallerySectionTitleContent.TitleText_RU
                                }
                                else if (lang == "en")
                                {
                                    @gallerySectionTitleContent.TitleText_EN
                                }
                                else if (lang == "tr")
                                {
                                    @gallerySectionTitleContent.TitleText_TR
                                }
                            }
                        </h1>
                        <div class="main-color gallery-section-text mt-3 d-flex justify-content-center">
                            <span class="w-50 text-center">
                                @{
                                    if (lang == "az")
                                    {
                                        @gallerySectionTitleContent.HelperText_AZ
                                    }
                                    else if (lang == "ru")
                                    {
                                        @gallerySectionTitleContent.HelperText_RU
                                    }
                                    else if (lang == "en")
                                    {
                                        @gallerySectionTitleContent.HelperText_EN
                                    }
                                    else if (lang == "tr")
                                    {
                                        @gallerySectionTitleContent.HelperText_TR
                                    }
                                }
                            </span>
                        </div>
                    }
                }
            </div>
            <div class="gallery-section-center row mt-3">
                @{
                    var photo1 = Model.GalleryComponents.FirstOrDefault(gc => gc.Order == 1);
                    string photo1path = null;

                    if (photo1 != null)
                        photo1path = "/uploads/" + photo1.TitlePhotoName;

                    <div class="col-12 my-1 col-sm-6 px-sm-1 px-md-0">
                        <img class="gallery-component w-100" order="1" src="@photo1path" />
                    </div>

                    var photo2 = Model.GalleryComponents.FirstOrDefault(gc => gc.Order == 2);
                    string photo2path = null;

                    if (photo2 != null)
                        photo2path = "/uploads/" + photo2.TitlePhotoName;

                    <div class="col-12 my-1 col-sm-6 col-md-4 px-sm-1 px-md-2">
                        <img class="gallery-component w-100" order="2" src="@photo2path" />
                    </div>

                    var photo3 = Model.GalleryComponents.FirstOrDefault(gc => gc.Order == 3);
                    string photo3path = null;

                    if (photo3 != null)
                        photo3path = "/uploads/" + photo3.TitlePhotoName;

                    <div class="col-12 my-1 col-sm-6 col-md-2 px-sm-1 px-md-0">
                        <img class="gallery-component w-100" order="3" src="@photo3path" />
                    </div>

                    var photo4 = Model.GalleryComponents.FirstOrDefault(gc => gc.Order == 4);
                    string photo4path = null;

                    if (photo4 != null)
                        photo4path = "/uploads/" + photo4.TitlePhotoName;

                    <div class="col-12 my-1 col-sm-6 col-md-3 mt-md-1 px-sm-1 px-md-0">
                        <img class="gallery-component w-100" order="4" src="@photo4path" />
                    </div>

                    var photo5 = Model.GalleryComponents.FirstOrDefault(gc => gc.Order == 5);
                    string photo5path = null;

                    if (photo5 != null)
                        photo5path = "/uploads/" + photo5.TitlePhotoName;

                    <div class="col-12 my-1 col-sm-6 col-md-4 mt-md-1 px-sm-1 px-md-2">
                        <img class="gallery-component w-100" order="5" src="@photo5path" />
                    </div>

                    var photo6 = Model.GalleryComponents.FirstOrDefault(gc => gc.Order == 6);
                    string photo6path = null;

                    if (photo6 != null)
                        photo6path = "/uploads/" + photo6.TitlePhotoName;

                    <div class="col-12 my-1 col-sm-6 col-md-5 mt-md-1 px-sm-1 px-md-0">
                        <img class="gallery-component w-100" order="6" src="@photo6path" />
                    </div>
                }
            </div>
            <div class="gallery-section-bottom text-right">
                <a asp-action="index" asp-controller="gallery" class="main-color-2 view-more">
                    @if (gallerySectionTitleContent != null)
                    {
                        if (lang == "az")
                        {
                            @gallerySectionTitleContent.BottomText_AZ
                        }
                        else if (lang == "ru")
                        {
                            @gallerySectionTitleContent.BottomText_RU
                        }
                        else if (lang == "en")
                        {
