@model HomeViewModel

@{
    var lang = Url.ActionContext.RouteData.Values["lang"].ToString();
    ViewData["Title"] = "Prokon";
    ViewData["Image"] = "img/meta-logo.jpg";
    ViewData["Description"] = "PROKON is a full service construction company specialized in management of integrated infrastructure, industrial plants and facilities construction processes from design adaptation to procurement and construction.";
    ViewData["Link"] = "home";
}

@await Html.PartialAsync("_HeaderPartial", Model.HeaderPartialViewModel)

<main>
    <section class="banner position-relative">
        <div class="owl-carousel owl-theme">
            @foreach (var sliderComponent in Model.SliderComponents)
            {
                var photoPath = "/uploads/" + sliderComponent.PhotoName;

                <div class="banner-image position-relative" style="background-image: url('@photoPath');">
                    <div class="cover">
                        <div class="container">
                            <div class="banner-content position-absolute text-white">
                                <p class="banner-title font-weight-bold">
                                    @{
                                        if (lang == "az")
                                        {
                                            @Html.Raw(sliderComponent.Title_AZ)
                                        }
                                        else if (lang == "ru")
                                        {
                                            @Html.Raw(sliderComponent.Title_RU)
                                        }
                                        else if (lang == "en")
                                        {
                                            @Html.Raw(sliderComponent.Title_EN)
                                        }
                                        else if (lang == "tr")
                                        {
                                            @Html.Raw(sliderComponent.Title_TR)
                                        }
                                    }
                                </p>
                                @{
                                    if (lang == "az" && !string.IsNullOrEmpty(sliderComponent.ButtonText_AZ))
                                    {
                                        <a href="@sliderComponent.Link" class="main-button d-flex justify-content-center align-items-center mt-4">
                                            <span>@sliderComponent.ButtonText_AZ</span>
                                        </a>
                                    }
                                    else if (lang == "ru" && !string.IsNullOrEmpty(sliderComponent.ButtonText_RU))
                                    {
                                        <a href="@sliderComponent.Link" class="main-button d-flex justify-content-center align-items-center mt-4">
                                            <span>@sliderComponent.ButtonText_RU</span>
                                        </a>
                                    }
                                    else if (lang == "en" && !string.IsNullOrEmpty(sliderComponent.ButtonText_EN))
                                    {
                                        <a href="@sliderComponent.Link" class="main-button d-flex justify-content-center align-items-center mt-4">
                                            <span>@sliderComponent.ButtonText_EN</span>
                                        </a>
                                    }
                                    else if (lang == "tr" && !string.IsNullOrEmpty(sliderComponent.ButtonText_TR))
                                    {
                                        <a href="@sliderComponent.Link" class="main-button d-flex justify-content-center align-items-center mt-4">
                                            <span>@sliderComponent.ButtonText_TR</span>
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    <section class="our-project">
        <div class="our-project-top">
            <div class="our-project-top-content pt-5 text-center">
                <div class="py-3">
                    @{
                        var projectSectionTitleContent = Model.SectionLayoutContents.FirstOrDefault(c => c.SectionName == "project");
                    }
                    @if (projectSectionTitleContent != null)
                    {
                        <h1 class="main-color section-title">
                            @{
                                if (lang == "az")
                                {
                                    @projectSectionTitleContent.TitleText_AZ
                                }
                                else if (lang == "ru")
                                {
                                    @projectSectionTitleContent.TitleText_RU
                                }
                                else if (lang == "en")
                                {
                                    @projectSectionTitleContent.TitleText_EN
                                }
                                else if (lang == "tr")
                                {
                                    @projectSectionTitleContent.TitleText_TR
                                }
                            }
                        </h1>

                        <span class="main-color our-project-top-text">
                            @{
                                if (lang == "az")
                                {
                                    @projectSectionTitleContent.HelperText_AZ
                                }
                                else if (lang == "ru")
                                {
                                    @projectSectionTitleContent.HelperText_RU
                                }
                                else if (lang == "en")
                                {
                                    @projectSectionTitleContent.HelperText_EN
                                }
                                else if (lang == "tr")
                                {
                                    @projectSectionTitleContent.HelperText_TR
                                }
                            }
                        </span>
                    }
                </div>
            </div>
        </div>
        <div class="our-project-bottom">
            <div class="owl-carousel owl-theme">
                @foreach (var project in Model.Projects)
                {
                    <div class="our-project-item">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-md-4">
                                    <div class="our-project-bottom-left h-100 d-flex align-items-center">
                                        <div class="our-project-bottom-left-content">
                                            <p class="project-title">
                                                @{
                                                    if (lang == "az")
                                                    {
                                                        @project.Name_AZ
                                                    }
                                                    else if (lang == "ru")
                                                    {
                                                        @project.Name_RU
                                                    }
                                                    else if (lang == "en")
                                                    {
                                                        @project.Name_EN
                                                    }
                                                    else if (lang == "tr")
                                                    {
                                                        @project.Name_TR
                                                    }
                                                }
                                            </p>
                                            <div class="project-content">
                                                @{
                                                    if (lang == "az")
                                                    {
                                                        @project.Location_AZ
                                                    }
                                                    else if (lang == "ru")
                                                    {
                                                        @project.Location_RU
                                                    }
                                                    else if (lang == "en")
                                                    {
                                                        @project.Location_EN
                                                    }
                                                    else if (lang == "tr")
                                                    {
                                                        @project.Location_TR
                                                    }
                                                }
                                            </div>
                                            <a asp-action="details" asp-controller="project" asp-route-id="@project.Slug" class="main-button our-project-button d-flex justify-content-center align-items-center mt-5">
                                                @if (lang == "az")
                                                {
                                                    <span>Ətraflı</span>
                                                }
                                                else if (lang == "ru")
                                                {
                                                    <span>Подробности</span>
                                                }
                                                else if (lang == "en")
                                                {
                                                    <span>More</span>
                                                }
                                                else if (lang == "tr")
                                                {
                                                    <span>Detaylar</span>
                                                }
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-8 mt-5 mt-md-0 d-flex justify-content-center">
                                    @{
                                        var mainPhotoPath = "/uploads/" + project.TitlePhotoName;
                                        <div class="project-main-photo-container d-flex align-items-center">
                                            <img src="@mainPhotoPath" class="project-main-photo">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
