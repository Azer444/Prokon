    <section class="career">
        <div class="container">
            <div class="career-content text-center">
                @{
                    var careerSectionLayoutContent = Model.SectionLayoutContents.FirstOrDefault(c => c.SectionName == "career");
                }
                @if (careerSectionLayoutContent != null)
                {
