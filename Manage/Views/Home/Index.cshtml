                    @foreach (var news in Model.News)
                    {
                        var photoPath = "/uploads/" + news.PhotoName;
                        <div class="col-12 col-md-6 mb-5">
                            @{
                                var link = "/" + lang + "/news/details/" + news.Slug;
                            }
                            <div class="news-component position-relative">
                                <a href="@link" class="news-component-anchor"></a>
                                <div class="news-component-top w-100"
                                     style="background-image: url('@photoPath');">
                                </div>
                                <div class="news-component-bottom">
                                    <div class="news-component-bottom-content">
                                        <p class="main-color news-component-bottom-content-title">
                                            @{
                                                if (lang == "az")
                                                {
                                                    @news.Title_AZ
                                                }
                                                else if (lang == "ru")
                                                {
                                                    @news.Title_RU
                                                }
                                                else if (lang == "en")
                                                {
                                                    @news.Title_EN
                                                }
                                                else if (lang == "tr")
                                                {
                                                    @news.Title_TR
                                                }
                                            }
                                        </p>
                                        <div class="main-color news-component-bottom-content-text">
                                            @{
                                                if (lang == "az")
                                                {
                                                    @Html.Raw(news.Content_AZ)
                                                }
                                                else if (lang == "ru")
                                                {
                                                    @Html.Raw(news.Content_RU)
                                                }
                                                else if (lang == "en")
                                                {
                                                    @Html.Raw(news.Content_EN)
                                                }
                                                else if (lang == "tr")
                                                {
                                                    @Html.Raw(news.Content_TR)
                                                }
                                            }
                                        </div>
                                        <div class="news-component-bottom__bottom d-flex justify-content-between mt-5">
                                            <p class="main-color-2 news-location">
                                                @{
                                                    if (lang == "az")
                                                    {
                                                        @news.Location_AZ
                                                    }
                                                    else if (lang == "ru")
                                                    {
                                                        @news.Location_RU
                                                    }
                                                    else if (lang == "en")
                                                    {
                                                        @news.Location_EN
                                                    }
                                                    else if (lang == "tr")
                                                    {
                                                        @news.Location_TR
                                                    }
                                                }
                                            </p>
                                            <p class="main-color-2 news-date">
                                                @news.CreatedAt.ToString("dd.MM.yyyy")
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="news-section-bottom">
                    <div class="d-flex justify-content-end w-100 mt-3 mr-3">
                        <a asp-action="index" asp-controller="press" class="main-color-2 view-more">
                            @{
                                if (newsSectionTitleContent != null)
                                {
                                    if (lang == "az")
                                    {
                                        @newsSectionTitleContent.BottomText_AZ
                                    }
                                    else if (lang == "ru")
                                    {
                                        @newsSectionTitleContent.BottomText_RU
                                    }
                                    else if (lang == "en")
                                    {
                                        @newsSectionTitleContent.BottomText_EN
                                    }
                                    else if (lang == "tr")
                                    {
                                        @newsSectionTitleContent.BottomText_TR
                                    }
                                }
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="licence position-relative">
        <div class="container">
            <div class="licence-section-top">
                @{
                    var licenceSectionTitleContent = Model.SectionLayoutContents.FirstOrDefault(c => c.SectionName == "licence");
                }
                @{
                    if (licenceSectionTitleContent != null)
                    {
                        <h1 class="main-color section-title">
                            @{
                                if (lang == "az")
