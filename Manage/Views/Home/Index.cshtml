                                    @licenceSectionTitleContent.TitleText_AZ
                                }
                                else if (lang == "ru")
                                {
                                    @licenceSectionTitleContent.TitleText_RU
                                }
                                else if (lang == "en")
                                {
                                    @licenceSectionTitleContent.TitleText_EN
                                }
                                else if (lang == "tr")
                                {
                                    @licenceSectionTitleContent.TitleText_TR
                                }
                            }
                        </h1>
                        <p class="main-color section-text mt-4">
                            @{
                                if (lang == "az")
                                {
                                    @licenceSectionTitleContent.HelperText_AZ
                                }
                                else if (lang == "ru")
                                {
                                    @licenceSectionTitleContent.HelperText_RU
                                }
                                else if (lang == "en")
                                {
                                    @licenceSectionTitleContent.HelperText_EN
                                }
                                else if (lang == "tr")
                                {
                                    @licenceSectionTitleContent.HelperText_TR
                                }
                            }
                        </p>
                    }
                }
            </div>
            <div class="licence-section-center mt-5">
                <div class="owl-carousel owl-theme">
                    @foreach (var licence in Model.Licences)
                    {
                        var photoPath = "/uploads/" + licence.PhotoName;
                        var pdfPath = "/uploads/" + licence.PDFName;

                        <a href="@pdfPath" target="_blank" class="licence-component d-flex align-items-center justify-content-center mx-2">
                            <div class="licence-component-content d-flex justify-content-center">
                                <img src="@photoPath" class="licence-component-image">
                            </div>
